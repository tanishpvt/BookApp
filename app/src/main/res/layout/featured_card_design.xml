<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="295dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/featured_image"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/featured_title"
            android:layout_below="@+id/featured_image"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Gravity of us"
            android:textColor="@color/black"
            android:textSize="20sp"/>

<!--        <RatingBar-->
<!--            android:id="@+id/mv_rating"-->
<!--            android:layout_below="@+id/featured_desc"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:rating="3.5"-->
<!--            style="@style/Widget.AppCompat.RatingBar.Small"/>-->


        <TextView
            android:id="@+id/mv_rating"
            android:layout_below="@+id/featured_desc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="4.5 ⭐"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/featured_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Phil Stamper"
            android:layout_below="@+id/featured_title"/>


        <TextView
            android:id="@+id/mv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 450"
            android:layout_below="@id/featured_desc"
            android:layout_toRightOf="@id/mv_rating"/>


    </RelativeLayout>

</RelativeLayout>