<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/TextView1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Book for\nevery taste."
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <Button
        android:backgroundTint="@color/matt_white"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/TextView1"
        android:id="@+id/Login"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow_forward_black"/>


    <Button
        android:backgroundTint="@color/signup"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:id="@+id/signup"
        android:layout_below="@+id/Login"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/ic_arrow_forward_white"/>

</RelativeLayout>